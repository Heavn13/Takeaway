<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--顶部导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/blue"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"/>
        <TextView
            android:text="我的订单"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#f1f0f0"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="商家信息"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="商家名称"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/sales_name"
                        android:layout_width="0dp"
                        android:text="sales_name"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:paddingRight="5dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/sales_phone"
                        android:background="@drawable/phone"
                        android:layout_marginLeft="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="商家地址"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/sales_address"
                        android:layout_width="0dp"
                        android:text="山东大学软件学院"
                        android:paddingRight="5dp"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/sales_location"
                        android:background="@drawable/location"
                        android:layout_marginLeft="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="食品信息"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <com.example.heavn.fanfan.Util.MyListView
                    android:id="@+id/foodsList"
                    android:scrollbars=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.example.heavn.fanfan.Util.MyListView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="总金额"/>
                    <TextView
                        android:id="@+id/total_money"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:textColor="#fa3939"
                        android:textSize="22dp"
                        android:text="￥0.0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="配送信息"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="送达时间"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/arrival_time"
                        android:layout_width="0dp"
                        android:text="尽快送达"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:paddingRight="5dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="收货地址"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:text="山东大学软件学院"
                        android:paddingRight="5dp"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/customer_location"
                        android:background="@drawable/location"
                        android:layout_marginLeft="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="收货信息"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="0dp"
                        android:text="暂无"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/customer_phone"
                        android:background="@drawable/phone"
                        android:layout_marginLeft="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="配送骑手"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/rider"
                        android:layout_width="0dp"
                        android:text="暂无"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:layout_weight="5"
                        android:paddingRight="5dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="配送费用"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/send_price"
                        android:layout_width="0dp"
                        android:textColor="@color/red"
                        android:text="￥5.0"
                        android:gravity="right|center_vertical"
                        android:textSize="20sp"
                        android:layout_weight="5"
                        android:paddingRight="40dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_height="152dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="订单信息"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:text="订单号"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="0dp"
                        android:text="123456789"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:paddingRight="5dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f0f0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:text="下单时间"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="0dp"
                        android:text="2018-9-14 17:16"
                        android:gravity="right|center_vertical"
                        android:textSize="15dp"
                        android:paddingRight="5dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="用户评价"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />
                    <LinearLayout
                        android:id="@+id/user_rank"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />
                    <TextView
                        android:id="@+id/customer_text"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:text="暂无评价"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="商家评价"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />

                    <LinearLayout
                        android:id="@+id/store_rank"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />
                    <TextView
                        android:id="@+id/sales_text"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18dp"

                        android:text="暂无评价"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="我的评价"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />
                    <LinearLayout
                        android:id="@+id/rider_rank"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/unselect"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#f1f0f0" />
                    <EditText
                        android:id="@+id/rider_text"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:hint="请输入您的评价"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/button"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/accept"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="接单"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_blue"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/reject"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="拒单"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_blue"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/finish"
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="完成配送"
                android:background="@drawable/button_blue"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/submit"
                android:textColor="@color/white"
                android:text="提交评价"
                android:background="@drawable/button_blue"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
